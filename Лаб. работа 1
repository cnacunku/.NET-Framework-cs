using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Runtime.InteropServices.WindowsRuntime;
using System.Text;
using System.Threading.Tasks;

namespace NETFramework_cs_1
{
    class NETFramework_cs_1
    {
        static void Main()
        {
            try
            {
                int choice;
                do
                {
                    Console.WriteLine("\nВыберите действие (1-5) или 0 для выхода:");
                    Console.WriteLine("1. Задание 1.1 - Вычислить a, b");                                                                 // Задание 1.1
                    Console.WriteLine("2. Задание 1.2 - Вычислить длину окружности, площадь круга и объем шара");                         // Задание 1.2
                    Console.WriteLine("3. Задание 1.3 - Вычисление максимального числа из трёх (расположение в порядке возрастания)");    // Задание 1.3
                    Console.WriteLine("4. Задание 1.4 - Вычисления площадей различных геометрических фигур");                             // Задание 1.4
                    Console.WriteLine("5. Задание 2 - Отображение данных структуры самолёта");                                            // Задание 2   
                    Console.WriteLine("0. Выход");
                    Console.Write("Выберите действие: ");

                    choice = Convert.ToInt32(Console.ReadLine());

                    switch (choice)
                    {
                        case 1:
                            First();
                            break;
                        case 2:
                            Second();
                            break;
                        case 3:
                            Third();
                            break;
                        case 4:
                            Fourth();
                            break;
                        case 5:
                            Fifth();
                            break;
                        case 0:
                            Console.WriteLine("Выход из программы");
                            break;
                        default:
                            Console.WriteLine("Несуществующее действие, попробуйте снова");
                            break;
                    }
                } while (choice != 0);

            }
            catch
            {
                Console.WriteLine("Ошибка. Введите число");
            }

        }

        static void First() // Задание 1.1
        {
            try
            {
                double x, y, z, a, b, znam;
                Console.Write("Введите x: ");
                x = Convert.ToDouble(Console.ReadLine());
                Console.Write("Введите y: ");
                y = Convert.ToDouble(Console.ReadLine());
                Console.Write("Введите z: ");
                z = Convert.ToDouble(Console.ReadLine());

                znam = z + Math.Pow(x, 2) / 4;

                if (Math.Abs(znam) == 0)
                {
                    Console.WriteLine("Ошибка: знаменатель в выражении a равен нулю");
                }
                else
                {
                    a = Math.Log(Math.Abs((y - Math.Sqrt(Math.Abs(x))) * (x - y / (znam))));
                    Console.WriteLine($"a = {a}");
                }

                if (Math.Abs(x) == 0)
                {
                    Console.WriteLine("Ошибка: знаменатель в выражении b равен нулю");
                }
                else
                {
                    b = x - Math.Pow(x, 2) / 3 + (x + y) / x;
                    Console.WriteLine($"b = {b}");
                }
            }
            catch
            {
                Console.WriteLine("Ошибка. Введите число");
            }
        }

        static void Second() // Задание 1.2
        {
            try
            {
                Console.Write("Введите радиус: ");
                double rad = Convert.ToDouble(Console.ReadLine());

                if (rad < 0)
                {
                    Console.WriteLine("Ошибка: радиус не может быть отрицательным");
                    return;
                }

                double C, S, V;
                C = 2 * Math.PI * rad;
                S = Math.PI * rad * rad;
                V = (4.0 / 3.0) * Math.PI * Math.Pow(rad, 3);

                Console.WriteLine($"При радиусе равном {rad} длинна окружности равна {C}, площадь круга равна {S}, объем шара равен {V}");
            }
            catch
            {
                Console.WriteLine("Ошибка. Введите число");
            }
        }
        static void Third() // Задание 1.3
        {
            try
            {
                Console.Write("Введите первое число: ");
                double a1 = Convert.ToDouble(Console.ReadLine());
                Console.Write("Введите второе число: ");
                double a2 = Convert.ToDouble(Console.ReadLine());
                Console.Write("Введите третье число: ");
                double a3 = Convert.ToDouble(Console.ReadLine());

                double max = Math.Max(Math.Max(a1, a2), a3);
                double min = Math.Min(Math.Min(a1, a2), a3);
                double mid = a1 + a2 + a3 - max - min;

                Console.WriteLine($"Максимальное число: {max}");
                Console.WriteLine($"Числа в порядке возрастания: {min}, {mid}, {max}");
            }
            catch
            {
                Console.WriteLine("Ошибка. Введите число");
            }
        }
        static void Fourth() // Задание 1.4
        {
            try
            {
                Console.Write("Введите число k (1–6): ");
                int k = Convert.ToInt32(Console.ReadLine());

                if (k < 1 || k > 6)
                {
                    Console.WriteLine("Ошибка: выберите число от 1 до 6");
                    return;
                }

                switch (k)
                {
                    case 1:
                        Console.Write("Введите полупериметр: ");
                        double p1 = Convert.ToDouble(Console.ReadLine());
                        Console.Write("Введите длину: ");
                        double l1 = Convert.ToDouble(Console.ReadLine());
                        if (p1 <= 0 || l1 <= 0)
                        {
                            Console.WriteLine("Ошибка: значения должны быть положительными");
                            return;
                        }
                        double S1 = p1 * l1;
                        Console.WriteLine($"Площадь равна {S1}");
                        break;

                    case 2:
                        Console.Write("Введите полупериметр: ");
                        double p2 = Convert.ToDouble(Console.ReadLine());
                        Console.Write("Введите высоту: ");
                        double h1 = Convert.ToDouble(Console.ReadLine());
                        if (p2 <= 0 || h1 <= 0)
                        {
                            Console.WriteLine("Ошибка: значения должны быть положительными");
                            return;
                        }
                        double S2 = p2 * (h1 / 2);
                        Console.WriteLine($"Площадь равна {S2}");
                        break;

                    case 3:
                        Console.Write("Введите радиус: ");
                        double R = Convert.ToDouble(Console.ReadLine());
                        Console.Write("Введите высоту: ");
                        double h2 = Convert.ToDouble(Console.ReadLine());
                        if (R <= 0 || h2 <= 0)
                        {
                            Console.WriteLine("Ошибка: радиус и высота должны быть положительными");
                            return;
                        }
                        double S3 = 2 * Math.PI * R * h2;
                        Console.WriteLine($"Площадь равна {S3}");
                        break;

                    case 4:
                        Console.Write("Введите радиус: ");
                        double R2 = Convert.ToDouble(Console.ReadLine());
                        Console.Write("Введите длину: ");
                        double l2 = Convert.ToDouble(Console.ReadLine());
                        if (R2 <= 0 || l2 <= 0)
                        {
                            Console.WriteLine("Ошибка: радиус и длина должны быть положительными");
                            return;
                        }
                        double S4 = 2 * Math.PI * R2 * l2;
                        Console.WriteLine($"Площадь равна {S4}");
                        break;

                    case 5:
                        Console.Write("Введите радиус: ");
                        double R3 = Convert.ToDouble(Console.ReadLine());
                        if (R3 <= 0)
                        {
                            Console.WriteLine("Ошибка: радиус должен быть положительным");
                            return;
                        }
                        double S5 = Math.PI * R3 * R3;
                        Console.WriteLine($"Площадь равна {S5}");
                        break;

                    case 6:
                        Console.Write("Введите радиус: ");
                        double R6 = Convert.ToDouble(Console.ReadLine());
                        Console.Write("Введите высоту: ");
                        double h3 = Convert.ToDouble(Console.ReadLine());
                        Console.Write("Введите сторону: ");
                        double a6 = Convert.ToDouble(Console.ReadLine());
                        if (R6 <= 0 || h3 <= 0 || a6 <= 0)
                        {
                            Console.WriteLine("Ошибка: все значения должны быть положительными");
                            return;
                        }
                        double S6 = Math.PI * R6 * (2 * h3 + a6);
                        Console.WriteLine($"Площадь равна {S6}");
                        break;
                }
            }
            catch
            {
                Console.WriteLine("Ошибка. Введите число");
            }
        }
        static void Fifth() // Задание 2
        {
            Airplane plane;

            Console.Write("Введите авиакомпанию: ");
            plane.AirlineName = Console.ReadLine();

            Console.Write("Введите модель самолёта: ");
            plane.Model = Console.ReadLine();

            int year;
            do
            {
                Console.Write("Введите год выпуска: ");
            } while (!int.TryParse(Console.ReadLine(), out year) || year <= 0);
            plane.Year = year;

            int capacity;
            do
            {
                Console.Write("Введите вместимость (кол-во мест): ");
            } while (!int.TryParse(Console.ReadLine(), out capacity) || capacity < 0);
            plane.Seats = capacity;

            plane.Show();
        }
        struct Airplane
        {
            public string AirlineName;    // Авиакомпания
            public string Model;          // Модель самолёта
            public int Year;              // Год выпуска
            public int Seats;             // Кол-во мест

            public void Show()
            {
                Console.WriteLine($"Авиакомпания: {AirlineName}, Модель: {Model}, Год выпуска: {Year}, Вместимость: {Seats} мест");
            }
        }
    }
}
