using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace NETFramework_cs_3
{
    class NETFramework_cs_3
    {
        static void Main()
        {
            int choice;
            startMenu:
            try
            {    
                do
                {
                    Console.WriteLine("\nВыберите действие (1-3) или 0 для выхода:");
                    Console.WriteLine("1. Задание 2  - Среди заданных чисел найти количество четных чисел");
                    Console.WriteLine("2. Задание 3  - Найти и вывести на экран все целые числа из промежутка от 1 до К, которые заканчиваются на цифру 3");
                    Console.WriteLine("3. Задание 4* - Вводиться последовательность чисел заканчивающаяся 0. Найти количество введенных чисел");
                    Console.WriteLine("0. Выход");
                    Console.Write("Выберите действие: ");

                    choice = Convert.ToInt32(Console.ReadLine());

                    switch (choice)
                    {
                        case 1:
                            First();
                            break;
                        case 2:
                            Second();
                            break;
                        case 3:
                            Third();
                            break;
                        case 0:
                            Console.WriteLine("Выход из программы");
                            break;
                        default:
                            Console.WriteLine("Несуществующее действие, попробуйте снова");
                            break;
                    }
                } while (choice != 0);
            }
            catch
            {
                Console.WriteLine("Ошибка. Введите число");
                goto startMenu;
            }

        }
        static void First()
        {
            Console.Write("Введите числа через пробел: ");
            string line = Console.ReadLine();

            if (string.IsNullOrWhiteSpace(line))
            {
                Console.WriteLine("Пустой ввод.");
                return;
            }

            string[] numbers = line.Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);

            int Count_1 = 0;

            for (int i = 0; i < numbers.Length; i++)
            {
                if (int.TryParse(numbers[i], out int number))
                {
                    if (number % 2 == 0) Count_1++;
                }
            }

            Console.WriteLine($"Количество чётных чисел: {Count_1}");

        }
        static void Second()
        {
            int k, Count_2 = 0;
            startSecond:
            Console.Write("Введите число K: ");
            string input = Console.ReadLine();

            if (!int.TryParse(input, out k) || k < 1)
            {
                Console.WriteLine("Ошибка. K должно быть целым числом и больше 0.");
                goto startSecond;
            }

            Console.WriteLine($"Числа от 1 до {k}, которые оканчиваются на 3:");

            for (int i = 1; i <= k; i++)
            {
                if (i % 10 == 3)
                {
                    Console.Write(i + " ");
                    Count_2++;
                }
            }

            if (Count_2 == 0) Console.WriteLine("Таких чисел не сущетсвует");
        }

        static void Third()
        {
            int number, Сount_3 = 0;

            Console.Write("Введите последовательность чисел, заканчивающуюся 0\n");

            do
            {
            startInput:
                Console.Write("Введите число: ");
                string input = Console.ReadLine();

                if (!int.TryParse(input, out number))
                {
                    Console.WriteLine("Ошибка, вы ввели не число");
                    goto startInput;
                }

                if (number != 0)
                {
                    Сount_3++;
                }

            } while (number != 0);

            Console.WriteLine($"Вы ввели {Сount_3} чисел(а) до нуля.");
        }
    }
}
