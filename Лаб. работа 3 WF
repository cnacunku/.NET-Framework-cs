using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace NETFramework_cs_3_WF
{
    public partial class NETFramework_cs_3_WF : Form
    {
        public NETFramework_cs_3_WF()
        {
            InitializeComponent();
        }

        private void btn5_Click(object sender, EventArgs e)
        {
            if (!double.TryParse(txt5eps.Text, out double eps) || eps <= 0)
            {
                MessageBox.Show("Введите корректное положительное eps.");
                return;
            }

            double sum = 0.0;
            double term = 1.0;       // текущий член ряда
            int n = 1;               // счётчик
            double factorial = 1.0;     

            while (term >= eps)
            {
                factorial *= n;
                term = 1.0 / Math.Sqrt(factorial);
                sum += term;
                n++;
            }

            txt5res.Text = sum.ToString("F15");
        }

        private void btn6_Click(object sender, EventArgs e)
        {
            if (!double.TryParse(txt6a.Text, out double a) ||
                !double.TryParse(txt6b.Text, out double b) ||
                !double.TryParse(txt6s.Text, out double h) ||
                h <= 0 || b < a)
            {
                MessageBox.Show("Введите корректные значения: a, b, s (s > 0, b ≥ a).");
                return;
            }

            double sum = 0.0;
            listBox1.Items.Clear();

            for (double x = a; x <= b; x += h)
            {
                double fx = (10 * x) / (x * x + 1) - 3;
                sum += fx;
                listBox1.Items.Add($"x={x:F2}, f(x)={fx:F4}");
            }

            txt6res.Text = sum.ToString("F6");
        }

        private void btn7_Click(object sender, EventArgs e)
        {
            if (!int.TryParse(txt7n.Text, out int number) || number < 10)
            {
                MessageBox.Show("Введите натуральное число (не меньше двухзначного).");
                return;
            }

            int tens = (number / 10) % 10;
            int count = 0;
            int temp = number;

            while (temp > 0)
            {
                int digit = temp % 10;
                if (digit > tens)
                    count++;
                temp /= 10;
            }

            txt7res.Text = count.ToString("F0");
        }

        private void btn8_Click(object sender, EventArgs e)
        {
            if (!int.TryParse(txt8n.Text, out int N) || N <= 0)
            {
                MessageBox.Show("Введите целое число N > 0");
                return;
            }

            double sum = 0;
            for (int i = 1; i <= N; i++)
            {
                int exp = N - i + 1;
                sum += Math.Pow(i, exp);
            }

            txt8res.Text = sum.ToString();
        }
    }
}
